
<%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>

<%= form_for :search, :url => url_for(:controller => 'searches', :action => 'create') do |f| %>

  <%= f.label :city %>
  <%= f.text_field :city %>
  <%= f.label :category %>
  <%= f.collection_select :category, Category.all, :name, :name %>
  <%= f.label :tags %>
  <%= f.text_field :tags %>
  <%= f.submit "Find" %>
<% end %>
