<div class="eventImage">
  <div class="eventDescription">
    <h1>Visit Moscow!</h1>
    <h3>Best everything in Russia's best city.</h3>
  </div>
</div>


<div class="citiesList">
<% City.all.each_with_index do |city, index| %>
      <div class="cityImage">
    <%= form_for :search, url: searches_path  do |f| %>
    <%= f.hidden_field :tags %>
    <%= f.hidden_field :city, :value => city.name %>
    <%= f.submit city.accent, :id => "city#{index}" %>
  <style>
    <%=  "#city#{index}" %>
    {
  background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url(<%= city.image %>);
  background-color: black;
  font-size:35pt;
  color: white;
  height: 400px;
  width: 400px;
  /*background:url(<%= city.image %>) no-repeat center;*/
  background-size: 400px 400px;
  border: 0;
  cursor: pointer;
    }
  </style>

  <% end %>
      </div>
<% end %>

</div>


  <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
  <script src="//code.jquery.com/jquery-1.10.2.js"></script>
  <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

<script>
  $( "#autocomplete-city" ).autocomplete({
    source: <%= raw City.pluck(:name) %>
  });
  $( "#autocomplete-tag" ).autocomplete({
    source: <%= raw Tag.pluck(:name) %>
  });
</script>
