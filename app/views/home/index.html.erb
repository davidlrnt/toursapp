<% @images = Dir.glob("app/assets/images/cities/*.jpg")%> 
  <% names = City.all.pluck('name') %>
<div class="featuredCities">
  <% names.each do |name| %>
        <%= name %>
  <% @images.each do |image| %>
  <div class="featuredCitiesImage">
    <%= image_tag "cities/#{image.split('/').last}" %>
    </div>

    <% end %>
    <% end %>
</div>
