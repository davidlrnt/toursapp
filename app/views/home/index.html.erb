<% Tour.all.each do |tour| %>
    <div class= "tourSnippet">
    <%= image_tag("http://ih1.redbubble.net/image.38250018.7772/flat,550x550,075,f.u1.jpg", size: "100x100")%>
    <h3><%= link_to "#{tour.title}", tour_path(tour)%></h3>
    <h4><%= link_to"#{tour.guide.name}", user_path(tour.guide) %></h4>
    <p><%= tour.description %></p>
    </div>
<% end %>

