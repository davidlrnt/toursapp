<%= form_for(@tour) do |f| %>
  <% if @tour.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tour.errors.count, "error") %> prohibited this tour from being saved:</h2>
      <ul><% @tour.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %></ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :description %><br>
    <%= f.text_area :description %><br>
    <%= f.label :category %>
    <%= f.collection_select :category_id, Category.all, :id, :name %>
  </div>
  <div class="field">
  <%# f.collection_check_boxes :tag_ids, Tag.all, :id, :name %><br>
  <%= f.fields_for(:tags, Tag.new) do |tag_form| %>
    <p>Add a new tag:</p><br>
    <%= tag_form.label :name %>
    <%= tag_form.text_field :name %>
  <% end %>
  </div>
  <div class="field">
  <h1> Cities </h1>
    <%= f.fields_for(:cities, City.new) do |t| %>
    <%= t.label :name %><br>
    <%= t.text_field :name %><br>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
