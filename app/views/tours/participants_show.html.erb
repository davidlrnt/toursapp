<div class="user_progress">
  <h2>Your Progress</h2>
<% @tour.locations.each do |location| %>
  <li><%= label_tag(:title, location.title)%>
  <li><%= submit_tag('Check the fuck in, yo') %>
<% end %>
<br>
<br>
<br>
<br>
<% @tour.comments.each do |comment| %>
  <li><%= comment.content %></li>
<% end %>
<br>
<br>
<br>
<br>
<%= form_for [@tour, @comment] do |f| %>
  <%= f.label "Leave a comment: " %>
  <%= f.text_field :content %>
  <%= f.submit "Post" %>
<% end %>


<%= form_tag('/quit') %>
<%= hidden_field_tag(:user_id, current_user.id) %>
<%= hidden_field_tag(:id, @tour.id) %>
<%= submit_tag"Quit" %>
</div>
