<div class="user_progress">
  <h2>Your Progress</h2>
<% @tour.locations.each do |location| %>
  <li><%= label_tag(:title, location.title)%>
  <li><%= submit_tag('Check in') %>
<% end %>
<br>
<% @tour.comments.each do |comment| %>
  <li>
  <%= link_to "#{comment.traveler.name}", comment.traveler %> wrote:
  <%= comment.content %>
  <%= comment.created_at %><br>
  </li>
  <% end %>
<br>
<%= form_for [@tour, @comment] do |f| %>
  <%= f.label "Leave a comment: " %>
  <%= f.text_field :content %>
  <%= f.submit "Post" %>
<% end %>


<%= form_tag('/quit') %>
<%= hidden_field_tag(:user_id, current_user.id) %>
<%= hidden_field_tag(:id, @tour.id) %>
<%= submit_tag"Quit" %>
</div>
