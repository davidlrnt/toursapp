  <div class="user">
    <div class="form">
       <h3><%= @user.name %> </h3>
       <h3>Guide Score</h3>
       <h3><%= @user.average_score %> </h3>
      <h3>Tours Created</h3>
      <% @tours.each do |guide| %>
        <li><%= link_to guide.title, tour_path(guide.id)  %><br>
        <% end %>
        <h3>Tours <%= @user.name %> On</h3>
        <% @trips.each do |participant| %>
          <li><%= participant.title %>
          <li><%= participant.description %>
          <li><%= link_to 'Go To Tour', tour_path(participant.id) %><br>
        <% end %>
        <li>
      <% if user_signed_in? %>
        <% if !current_user.friends.include?(@user) && !current_user.pending_friends.include?(@user)  %>
          <%= link_to "Add Friend", friendships_path(:friend_id => @user), :method => :post %>
        <% end %>
      <% end %>
      </div>
  </div>
