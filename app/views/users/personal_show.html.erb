<%= form_for @user do |f| %>

  <div class="user">
    <div class="form">
      <h3>Tours I've Created</h3>
      <% @tours.each do |guide| %>
        <li><%= link_to guide.title, tour_path(guide.id)  %><br>
        <% end %>
        <h3>Tours I'm On</h3>
        <% @trips.each do |participant| %>
          <li><%= participant.title %>
          <li><%= participant.description %>
          <li><%= link_to 'Go To Tour', tour_path(participant.id) %><br>
        <% end %>
        <h3>My Friends</h3>
        <li>Friend 1
        <li>Friend 2
          <h3>Badges: </h3>
          <%= link_to "#{@user.badges.count} Badge(s)", user_badges_path(@user) %>
      </div>
  </div>
<% end %>
